<h3>ユーザー新規作成</h3>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"部屋詳細" %></th>
      <td><%= f.text_field :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :price ,"価格" %></th>
      <td><%= f.text_area :price %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :rooms %></li>
    </ul>
  </div>
<% end %>