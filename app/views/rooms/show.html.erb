<h2>部屋詳細</h2>
<table>
<tr>
<th>画像</th>
<% if @room.room_image? %>  
<td>
    <%= image_tag @room.room_image.url,size: "200x150" %></td>
    <% else %>
    <td><%= image_tag "https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png" ,size: "200x150" %></td>
<% end %>
</tr>
  <th>名前</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>部屋詳細</th>
    <td><%= @room.introduction %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @room.address %></td>
  </tr>
  <tr>
    <th>価格</th>
    <td><%= @room.price %></td>
  </tr>
</table>


<div>
  <ul>
    <li><%= link_to "部屋の登録済み一覧に戻る", :rooms %></li>
  </ul>
</div>