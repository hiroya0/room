<h1>ユーザー詳細</h1>

<% if @user.image? %>  
<div><%= image_tag @user.image.url,size: "200x150" %></div>
<% else %>
<div><%= image_tag "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" %></div>
<% end %>

<h3>ユーザー名</h3>
<%= @user.nickname %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>プロフィール</h3>
<%= @user.introduce%>

<div class = edit>
<a><%= link_to "編集", "/users/edit" %></a>
<a href="javascript:history.back()">[戻る]</a>
</div>